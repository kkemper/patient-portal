<p id="notice"><%= notice %></p>

<h1>Listing Vitals</h1>

<table>
  <thead>
    <tr>
      <th>id</th>
      <th>Patientid</th>
      <th>Vital type</th>
      <th>Datetime</th>
      <th>Vitaldetails</th>
      <th>Units</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vitals.each do |vital| %>
      <tr>
        <td><%= vital.id %></td>
        <td><%= vital.patientID %></td>
        <td><%= vital.vital_type %></td>
        <td><%= vital.dateTime %></td>
        <td><%= vital.vitalDetails %></td>
        <td><%= vital.Units %></td>
        <td><%= link_to 'Show', vital %></td>
        <td><%= link_to 'Edit', edit_vital_path(vital) %></td>
        <td><%= link_to 'Destroy', vital, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

