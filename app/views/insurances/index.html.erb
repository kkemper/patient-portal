<p id="notice"><%= notice %></p>

<h1>Listing Insurances</h1>

<table>
  <thead>
    <tr>
      <th>Policyid</th>
      <th>Providername</th>
      <th>Coveragedetails</th>
      <th>Providercontact</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @insurances.each do |insurance| %>
      <tr>
        <td><%= insurance.policyID %></td>
        <td><%= insurance.providerName %></td>
        <td><%= insurance.coverageDetails %></td>
        <td><%= insurance.providerContact %></td>
        <td><%= link_to 'Show', insurance %></td>
        <td><%= link_to 'Edit', edit_insurance_path(insurance) %></td>
        <td><%= link_to 'Destroy', insurance, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

